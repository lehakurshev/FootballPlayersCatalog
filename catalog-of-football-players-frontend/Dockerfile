FROM node:14


WORKDIR /app

COPY . .
RUN npm install

ARG REACT_APP_BACK_ADDRESS=https://bbao61jrdalru8mtpu9b.containers.yandexcloud.net
ENV REACT_APP_BACK_ADDRESS=${REACT_APP_BACK_ADDRESS}

ARG REACT_APP_USE_SIGNALR=false
ENV REACT_APP_USE_SIGNALR=${REACT_APP_USE_SIGNALR}

ARG PORT=8080
ENV PORT=${PORT}

EXPOSE $PORT
CMD ["npm", "start"]